{
    "name": "muffin/sti",
    "description": "Single Table Inheritance for CakePHP ORM",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "muffin",
        "sti"
    ],
    "homepage": "https://github.com/usemuffin/sti",
    "license": "MIT",
    "authors": [
        {
            "name": "Jad Bitar",
            "homepage": "http://jadb.io",
            "role": "Author"
        },
        {
            "name": "ADmad",
            "homepage": "https://github.com/ADmad",
            "role": "Author"
        },
        {
            "name": "Others",
            "homepage": "https://github.com/usemuffin/sti/graphs/contributors"
        }
    ],
    "support": {
        "issues": "https://github.com/usemuffin/sti/issues",
        "source": "https://github.com/usemuffin/sti"
    },
    "require": {
        "cakephp/orm": "^5.0.0"
    },
    "require-dev": {
        "cakephp/cakephp": "^5.0.0",
        "cakephp/cakephp-codesniffer": "^5.0",
        "phpunit/phpunit": "^10.1.0"
    },
    "autoload": {
        "psr-4": {
            "Muffin\\Sti\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Muffin\\Sti\\Test\\": "tests",
            "Muffin\\Sti\\TestApp\\": "tests/test_app"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "cs-check": "phpcs --colors --parallel=16 -p src/ tests/",
        "cs-fix": "phpcbf --colors --parallel=16 -p src/ tests/",
        "phpstan": "tools/phpstan analyse",
        "psalm": "tools/psalm --show-info=false",
        "stan": [
            "@phpstan",
            "@psalm"
        ],
        "stan-baseline": "tools/phpstan --generate-baseline",
        "psalm-baseline": "tools/psalm  --set-baseline=psalm-baseline.xml",
        "stan-setup": "phive install",
        "test": "phpunit"
    }
}
